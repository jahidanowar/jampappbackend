{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "Image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "Active": {
      "type": "boolean"
    },
    "categories": {
      "collection": "category",
      "via": "posts",
      "dominant": true
    },
    "slug": {
      "type": "string"
    },
    "comments": {
      "collection": "comment"
    }
  }
}
